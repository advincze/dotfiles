{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "coreutils@latest",
    "findutils@latest",
    "git@latest",
    "thefuck@latest",
    "sheldon@latest",
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "eval \"$(sheldon -q --non-interactive source)\"",
      "eval \"$(thefuck --alias)\"",
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1",
      ],
    },
  },
}
